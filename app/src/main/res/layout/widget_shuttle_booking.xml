<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/widget_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorCardDefault">

    <LinearLayout
        android:id="@+id/llWidgetListLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:layout_margin="2dp"
        android:background="@drawable/rectangle"
        android:orientation="vertical">

       <!-- <TextView
            android:id="@+id/tvWidgetTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            android:padding="10dp"
            android:text="Bookings"
            android:textColor="@color/colorWhite"
            android:textSize="18sp"
            android:textStyle="bold" />-->

        <TextView
            android:id="@+id/tvWidgetDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="1999/01/01"
            android:textColor="@color/colorBlack"
            android:textSize="20sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvWidgetFrom"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_margin="10dp"
                android:gravity="start"
                android:textColor="@color/colorBlack"
                android:textSize="18sp"
                android:text="Sabie" />

            <ImageView
                android:id="@+id/ivWidgetShuttle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:gravity="center"
                android:background="@drawable/ic_shuttle" />


            <TextView
                android:id="@+id/tvWidgetTo"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_margin="10dp"
                android:gravity="end"
                android:textColor="@color/colorBlack"
                android:textSize="18sp"
                android:text="Sabie" />

        </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="0dp"
            android:layout_height="2dp"
            android:layout_marginStart="50dp"
            android:layout_marginRight="50dp"
            android:layout_marginLeft="50dp"
            android:layout_marginEnd="50dp"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:background="@color/colorPrimary" />

    </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvWidgetFromTime"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_margin="10dp"
                android:gravity="start"
                android:visibility="invisible"
                android:textColor="@color/colorBlack"
                android:textSize="18sp"
                android:text="12:00" />

            <TextView
                android:id="@+id/tvWidgetSeats"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_margin="10dp"
                android:gravity="center"
                android:text="2 seats"
                android:textColor="@color/colorBlack"
                android:textSize="20sp" />


            <TextView
                android:id="@+id/tvWidgetToTime"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_margin="10dp"
                android:visibility="invisible"
                android:gravity="end"
                android:textColor="@color/colorBlack"
                android:textSize="18sp"
                android:text="16:00" />

        </LinearLayout>

        <!--<TextView
            android:id="@+id/tvWidgetSeats"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="2 seats"
            android:textColor="@color/colorBlack"
            android:textSize="20sp" />-->

        <!--<ListView
            android:id="@+id/widget_stack_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:loopViews="true" />-->


    </LinearLayout>

    <RelativeLayout
        android:id="@+id/widgetEmptyView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <ImageView
            android:id="@+id/ivWidgetLogo"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:alpha="0.1"
            android:background="@drawable/gradient_background"
            android:src="@drawable/logo" />



    </RelativeLayout>

</FrameLayout>