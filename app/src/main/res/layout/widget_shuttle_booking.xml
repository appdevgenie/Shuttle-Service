<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/widget_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorCardDefault">

    <LinearLayout
        android:id="@+id/llWidgetInfoLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="2dp"
        android:background="@drawable/rectangle"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvWidgetDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-light"
            android:gravity="center"
            android:textColor="@color/primary_text"
            android:textSize="@dimen/widget_text_size"
            tools:text="1999/01/01" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvWidgetFrom"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:fontFamily="sans-serif-light"
                android:gravity="start"
                android:textColor="@color/primary_text"
                android:textSize="@dimen/widget_text_size"
                tools:text="Sabie" />

            <ImageView
                android:id="@+id/ivWidgetShuttle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@drawable/ic_shuttle"
                android:gravity="center"
                android:contentDescription="@string/shuttle_image_view" />

            <TextView
                android:id="@+id/tvWidgetTo"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:fontFamily="sans-serif-light"
                android:gravity="end"
                android:textColor="@color/primary_text"
                android:textSize="@dimen/widget_text_size"
                tools:text="Sabie" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="0dp"
                android:layout_height="2dp"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="50dp"
                android:layout_marginLeft="50dp"
                android:layout_marginEnd="50dp"
                android:layout_marginRight="50dp"
                android:layout_weight="1"
                android:background="@color/divider"
                android:contentDescription="@string/gray_line_divider" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvWidgetFromTime"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:fontFamily="sans-serif-light"
                android:gravity="start"
                android:textColor="@color/primary_text"
                android:textSize="@dimen/widget_text_size"
                tools:text="12:00" />

            <TextView
                android:id="@+id/tvWidgetSeats"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:fontFamily="sans-serif-light"
                android:gravity="center"
                android:textColor="@color/primary_text"
                android:textSize="@dimen/widget_text_size"
                tools:text="2 seats" />


            <TextView
                android:id="@+id/tvWidgetToTime"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:fontFamily="sans-serif-light"
                android:gravity="end"
                android:textColor="@color/primary_text"
                android:textSize="@dimen/widget_text_size"
                tools:text="16:00" />

        </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/bWidgetUpdate"
            style="@style/ButtonStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/update_widget" />

        <Button
            android:id="@+id/bWidgetOpen"
            style="@style/ButtonStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/open_app" />

    </LinearLayout>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/widgetEmptyView"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/ivWidgetLogo"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:alpha="0.1"
            android:background="@drawable/gradient"
            android:contentDescription="@string/shuttle_logo"
            android:src="@drawable/logo_ss" />

    </RelativeLayout>

</FrameLayout>